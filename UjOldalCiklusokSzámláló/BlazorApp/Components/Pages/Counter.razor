@page "/counter"
@rendermode InteractiveServer
@inject IJSRuntime JSRuntime

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

@if (currentCount >= 5)
{
    <p>Elérted az 5-öt</p>
}

<button class="btn btn-primary" @onclick="()=>currentCount+=Szamol10el">Számolás</button>

<button class="btn btn-primary" @onclick="google">katt ide</button>

@for (int i = 0; i < currentCount; i++)
{
    <p>Gratula!</p>
}


@code {
    private int currentCount = 0;

    [Parameter]
    public int Szamol10el { get; set; } = 1;

    private void IncrementCount()
    {
        currentCount += Szamol10el;
    }

    private void google(MouseEventArgs e)
    {
       if (currentCount>=7)
        {
            JSRuntime.InvokeVoidAsync("open", "https://google.hu", "_blank");
        }
    }
}
